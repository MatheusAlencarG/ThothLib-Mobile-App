<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.QRCodeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/withdraw_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/qr_code_title_withdraw"
                android:layout_marginTop="10dp"
                android:paddingHorizontal="20dp"
                android:textAlignment="center"
                android:textColor="@color/ligth_blue_color"
                android:textSize="40sp"/>

            <TextView
                android:id="@+id/withdraw_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:textSize="17sp"
                android:textAlignment="center"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:layout_below="@id/withdraw_title"
                android:text="@string/qr_code_description_withdraw"/>

            <LinearLayout
                android:id="@+id/qr_code_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/withdraw_description">

                <ImageView
                    android:id="@+id/qr_code_image_qr_code"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_marginVertical="60dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/qr_code_container"
                android:gravity="center">

                <Button
                    android:id="@+id/qr_code_go_back_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/qr_code_btn_back_withdraw"
                    android:paddingHorizontal="40dp"
                    android:backgroundTint="@color/dark_blue"
                    />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</FrameLayout>