<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:paddingHorizontal="15dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/border_blue"
        android:padding="20dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/user_content_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
             />

        <TextView
            android:id="@+id/tv_ranking_userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fragRanking_name"
            android:textSize="35sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_marginVertical="20dp"/>

        <RelativeLayout
            android:id="@+id/rankingBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/rankingPts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="33dp"
                android:text="@string/fragRanking_pts"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/rankingLvl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragRanking_lvl"
                android:textSize="35sp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                />




        </RelativeLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>