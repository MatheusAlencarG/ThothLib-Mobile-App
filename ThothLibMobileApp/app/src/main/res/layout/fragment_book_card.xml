<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookCardFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/ll_book_card"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/book_card_fragment_border"
        android:layout_marginHorizontal="10dp"
        android:paddingVertical="25dp"
        android:paddingHorizontal="10dp"

        >


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_fake_b"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/book_card_fragment_title"
            android:textSize="35sp"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/book_card_fragment_date"
            android:textSize="35sp"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginVertical="25dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/book_card_fragment_reserve"
            android:textSize="30sp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:backgroundTint="@color/dark_blue"
            />
    </LinearLayout>

</FrameLayout>