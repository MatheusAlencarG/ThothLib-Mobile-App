<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserPerfil">

    <include
        android:id="@+id/header"
        layout="@layout/activity_side_bar"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/userImg"
                android:layout_width="165dp"
                android:layout_height="165dp"
                android:layout_marginTop="85dp"
                android:src="@mipmap/user_img"
                android:layout_marginBottom="10dp" />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp">

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Matheus Alencarros"
                    android:textSize="30sp"
                    android:textColor="#000000"
                    android:layout_gravity="bottom"/>
                <ImageView
                    android:id="@+id/changeIcon"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@mipmap/icon_change_name"
                    android:layout_marginLeft="25dp"/>

            </LinearLayout>
            <TextView
                android:id="@+id/userEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Matheus.alencar@bandtec.com"
                android:textSize="25sp"
                android:textColor="#000000"
                android:layout_marginBottom="15dp"/>
            <RelativeLayout
                android:id="@+id/rlName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="30sp"
                android:layout_marginBottom="15dp"
                >

                <TextView
                    android:id="@+id/userRa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01202054"
                    android:textSize="25sp"
                    android:textColor="#000000"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:id="@+id/userPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="(11) 989845567"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginHorizontal="50sp"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usuário Nível"
                    android:textSize="30sp"
                    android:textColor="#000000"
                    android:layout_marginRight="30dp"
                    />

                <TextView
                    android:id="@+id/userLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textColor="#04378F"
                    android:textSize="50sp"

                    />


            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_marginHorizontal="25dp"

                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:src="@mipmap/icon_open_book" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12 Livros lidos"
                        android:textColor="#000000"
                        android:textSize="25sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:src="@mipmap/icon_chat"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="05 resenhas"
                        android:textSize="25sp"
                        android:textColor="#000000"
                        />
                </LinearLayout>
            </RelativeLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rankingButton"
                android:text="@string/ver_ranking"
                android:textSize="25sp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="25dp"
                android:backgroundTint="#04378F"></Button>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Livros reservados"
                android:textSize="30sp"
                android:textColor="#000000"
                android:layout_marginVertical="20dp"></TextView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>