<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.QuestionFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-200dp"
        tools:layout_editor_absoluteY="251dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45sp"
            android:layout_marginTop="10sp"
            android:text="Perguntas frequentes"
            android:textAlignment="center"
            android:textColor="@color/ligth_blue_color"
            android:textSize="35dp" />

        <LinearLayout
            android:id="@+id/pergunta_1"
            android:layout_width="350dp"
            android:layout_height="85dp"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="200dp"
            android:background="@drawable/border_radius_black"
            android:gravity="center"
            android:onClick="pergunta1_onclick"
            android:paddingVertical="10sp"
            tools:ignore="MissingConstraints">

            <TextView
                android:layout_width="256dp"
                android:layout_height="85dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="@string/faq_question"
                android:textColor="@color/white"
                android:textSize="25dp">

            </TextView>

            <ImageView
                android:id="@+id/img_max"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:padding="0dp"
                android:src="@drawable/ic_baseline_add_24"
                tools:ignore="MissingConstraints" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/resposta_1"
            android:layout_width="350dp"
            android:layout_height="85dp"
            android:background="@drawable/border_radius_black_white"
            android:orientation="horizontal"
            android:paddingVertical="10sp"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/faq_answer"
                android:paddingLeft="10dp"/>
        </LinearLayout>
        <!--  Segunda pergunta  -->
        <LinearLayout
            android:id="@+id/pergunta_2"
            android:layout_width="350dp"
            android:layout_height="85dp"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="300dp"
            android:background="@drawable/border_radius_black"
            android:gravity="center"
            android:onClick="pergunta2_onclick"
            android:paddingVertical="10sp"
            tools:ignore="MissingConstraints">

            <TextView
                android:layout_width="256dp"
                android:layout_height="85dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="@string/faq_question2"
                android:textColor="@color/white"
                android:textSize="25dp">

            </TextView>

            <ImageView
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:padding="0dp"
                android:src="@drawable/ic_baseline_add_24"
                tools:ignore="MissingConstraints" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/resposta_2"
            android:layout_width="350dp"
            android:layout_height="85dp"
            android:background="@drawable/border_radius_black_white"
            android:orientation="horizontal"
            android:paddingVertical="10sp"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/faq_answer2"
                android:paddingLeft="10dp"/>
        </LinearLayout>


        <!--  Terceira pergunta  -->

        <LinearLayout
            android:id="@+id/pergunta_3"
            android:layout_width="350dp"
            android:layout_height="85dp"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="400dp"
            android:background="@drawable/border_radius_black"
            android:gravity="center"
            android:onClick="pergunta3_onclick"
            android:paddingVertical="10sp"
            tools:ignore="MissingConstraints">

            <TextView
                android:layout_width="256dp"
                android:layout_height="85dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="@string/faq_question3"
                android:textColor="@color/white"
                android:textSize="25dp">

            </TextView>

            <ImageView
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:padding="0dp"
                android:src="@drawable/ic_baseline_add_24"
                tools:ignore="MissingConstraints" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/resposta_3"
            android:layout_width="350dp"
            android:layout_height="85dp"
            android:background="@drawable/border_radius_black_white"
            android:orientation="horizontal"
            android:paddingVertical="10sp"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/faq_answer3"
                android:paddingLeft="10dp"/>

        </LinearLayout>

        <!--  quarta pergunta  -->
        <LinearLayout
            android:id="@+id/pergunta_4"
            android:layout_width="350dp"
            android:layout_height="85dp"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="500dp"
            android:background="@drawable/border_radius_black"
            android:gravity="center"
            android:onClick="pergunta4_onclick"
            android:paddingVertical="10sp"
            tools:ignore="MissingConstraints">

            <TextView
                android:layout_width="256dp"
                android:layout_height="85dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="@string/faq_question4"
                android:textColor="@color/white"
                android:textSize="25dp">

            </TextView>

            <ImageView
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:padding="0dp"
                android:src="@drawable/ic_baseline_add_24"
                tools:ignore="MissingConstraints" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/resposta_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_radius_black_white"
            android:orientation="horizontal"
            android:paddingVertical="10sp"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/faq_answer4"
                android:paddingLeft="10dp"/>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>